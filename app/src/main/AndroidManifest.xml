<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartVIPParking">

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_GOOGLE_MAPS_API_KEY" />

        <activity
            android:name=".ui.dashboard.ParkingMapActivity"
            android:exported="false"
            android:label="Parking Map" />

        <activity
            android:name=".ui.dashboard.QrScannerActivity"
            android:exported="false"
            android:label="Access Scanner" />
        
        <activity
            android:name=".ui.dashboard.ProfileActivity"
            android:exported="false"
            android:label="Personal Profile" />
            
        <activity
            android:name=".ui.dashboard.VehiclesActivity"
            android:exported="false"
            android:label="My Vehicles" />

        <activity
            android:name=".ui.dashboard.AddVehicleActivity"
            android:exported="false"
            android:label="Add New Vehicle" />

        <activity
            android:name=".ui.dashboard.HistoryActivity"
            android:exported="false"
            android:label="Parking History" />

        <activity
            android:name=".ui.dashboard.InvoicesActivity"
            android:exported="false"
            android:label="Invoices" />

        <activity
            android:name=".ui.dashboard.ChargesActivity"
            android:exported="false"
            android:label="Parking Charges" />

        <activity
            android:name=".ui.dashboard.OverdueActivity"
            android:exported="false"
            android:label="Overdue Payments" />
            
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.OwnerDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>